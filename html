    <script>
        let montantCollecte = 0;
        const objectif = 10000000; // 10 millions de $HUMC
        const interval = setInterval(() => {
            if (montantCollecte >= objectif) {
                clearInterval(interval); // Arrête l'intervalle quand l'objectif est atteint
            } else {
                montantCollecte += Math.floor(Math.random() * 50000); // Simule une collecte aléatoire
                document.getElementById('montant-collecte').innerText = montantCollecte.toLocaleString();
                const pourcentage = (montantCollecte / objectif) * 100;
                document.getElementById('progress-bar').style.width = pourcentage + '%';
            }
        }, 1000); // Met à jour chaque seconde
    </script>

